{
  "name": "@web/core",
  "version": "1.0.2",
  "description": "",
  "main": "apps/introduce/dist/index.js",
  "scripts": {
    "prepare": "husky",
    "clean:cache": "node ./scripts/cleanup-cache.js",
    "clean:build": "node ./scripts/cleanup.js",
    "clean:modules": "node ./scripts/cleanup-modules.js",
    "build": "pnpm run clean:modules && pnpm run clean:cache && pnpm run clean:build && pnpm install && turbo build",
    "clean:docs": "node ./scripts/cleanup-docs.js",
    "dev": "turbo dev",
    "docs": "turbo docs",
    "docs:all": "typedoc",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dependency:install": "npm install -g dependency-cruiser",
    "dependency:export": "dependency-cruiser --output-type dot ./ | dot -Tsvg > dependency-graph.svg",
    "dependecy": "pnpm run dependency:install && pnpm run dependency:export"
  },
  "publishConfig": {
    "@web:registry": "https://registry.npmjs.org/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "eslint": "^8.57.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typedoc": "^0.25.11"
  },
  "dependencies": {
    "turbo": "^1.13.2"
  },
  "packageManager": "pnpm@8.15.4"
}

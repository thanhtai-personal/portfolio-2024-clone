{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "docs": {
      "dependsOn": ["^docs"],
      "outputs": ["docs/**"],
      "cache": false
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "release": {
      "dependsOn": ["^release"],
      "cache": false,
      "persistent": false
    }
  }
}
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es2022",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]

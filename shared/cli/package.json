{
  "name": "@ttt/cli",
  "version": "0.0.4",
  "description": "TTT Core CLI",
  "keywords": [
    "oclif"
  ],
  "homepage": "https://github.com/shared/cli",
  "bugs": "https://github.com/shared/cli/issues",
  "repository": "shared/cli",
  "license": "MIT",
  "author": "Cuong Le",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ttt": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b && tsc-alias && cpx 'resource/**/*' 'dist/resource'",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepare": "npm run build",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "npm run lint",
    "version": "oclif readme && git add README.md",
    "release:patch": "pnpm build && npm version patch && npm publish"
  },
  "oclif": {
    "bin": "cli",
    "commands": "./dist/commands",
    "dirname": "cli",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^4",
    "barrelsby": "^2.8.1",
    "commander": "^11.0.0",
    "openapi-zod-client": "^1.13.0",
    "swagger-typescript-api": "^13.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ttt-config/eslint-plugin": "workspace:*",
    "@ttt-config/tsconfig": "workspace:*",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "chai": "^4",
    "cpx": "^1.5.0",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
